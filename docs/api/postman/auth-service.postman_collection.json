{
  "info": {
    "name": "Zenith Auth Service",
    "description": "Authentication and authorization service for Zenith platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{auth_service_url}}/health",
          "host": ["{{auth_service_url}}"],
          "path": ["health"]
        },
        "description": "Check service health status"
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.accessToken);",
                  "    pm.environment.set('refresh_token', response.refreshToken);",
                  "    pm.environment.set('user_id', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "url": {
              "raw": "{{auth_service_url}}/auth/register",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.accessToken);",
                  "    pm.environment.set('refresh_token', response.refreshToken);",
                  "    pm.environment.set('user_id', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\"\n}"
            },
            "url": {
              "raw": "{{auth_service_url}}/auth/login",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Authenticate user and get tokens"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_service_url}}/auth/logout",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "logout"]
            },
            "description": "Logout and invalidate tokens"
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{auth_service_url}}/auth/refresh",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Get new access token using refresh token"
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_service_url}}/auth/verify",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "verify"]
            },
            "description": "Verify token validity"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_service_url}}/auth/me",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "me"]
            },
            "description": "Get authenticated user profile"
          }
        }
      ]
    },
    {
      "name": "Password Reset",
      "item": [
        {
          "name": "Request Password Reset",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
            },
            "url": {
              "raw": "{{auth_service_url}}/auth/password-reset/request",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "password-reset", "request"]
            },
            "description": "Request password reset email"
          }
        },
        {
          "name": "Confirm Password Reset",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"reset-token-here\",\n  \"password\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{auth_service_url}}/auth/password-reset/confirm",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "password-reset", "confirm"]
            },
            "description": "Reset password with token"
          }
        }
      ]
    },
    {
      "name": "OAuth",
      "item": [
        {
          "name": "Google OAuth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{auth_service_url}}/auth/google",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "google"]
            },
            "description": "Initiate Google OAuth flow"
          }
        },
        {
          "name": "GitHub OAuth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{auth_service_url}}/auth/github",
              "host": ["{{auth_service_url}}"],
              "path": ["auth", "github"]
            },
            "description": "Initiate GitHub OAuth flow"
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  }
}
