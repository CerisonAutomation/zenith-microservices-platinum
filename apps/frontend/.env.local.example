# ============================================
# VERCEL BEST PRACTICE: .env.local Configuration
# ============================================
# Copy this file to .env.local for local development
# IMPORTANT: Never commit .env.local to version control!
#
# For Vercel deployment:
# 1. Add these variables in Vercel Dashboard > Project Settings > Environment Variables
# 2. Use VERCEL_OIDC_TOKEN for secure authentication (automatically provided by Vercel)
# 3. Configure secrets using @secret-name format in vercel.json
#
# See: https://vercel.com/docs/concepts/projects/environment-variables

# ============================================
# NEXT.JS APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Zenith Dating Platform"
NODE_ENV=development

# ============================================
# SUPABASE (Required for Production)
# ============================================
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# STRIPE PAYMENTS (Required for subscriptions)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# AI SERVICES (Optional)
# ============================================
# Google Gemini API
GOOGLE_GEMINI_API_KEY=

# OpenAI (Alternative)
OPENAI_API_KEY=

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=

# ============================================
# VIDEO/VOICE CALLING (Optional)
# ============================================
# Daily.co API for WebRTC
# Get from: https://dashboard.daily.co/developers
DAILY_API_KEY=

# ============================================
# GIF SUPPORT (Optional)
# ============================================
# Giphy API
# Get from: https://developers.giphy.com/dashboard
NEXT_PUBLIC_GIPHY_API_KEY=

# ============================================
# OAUTH PROVIDERS (Optional)
# ============================================
# Configure in Supabase Dashboard first
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# ============================================
# VERCEL-SPECIFIC (Auto-populated by Vercel)
# ============================================
# These are automatically set by Vercel - DO NOT SET MANUALLY
# VERCEL=1
# VERCEL_ENV=production|preview|development
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_OIDC_TOKEN=auto-generated-token
# VERCEL_GIT_COMMIT_SHA=git-commit-hash
# VERCEL_GIT_COMMIT_REF=branch-name

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
# Vercel Analytics (auto-enabled for Vercel deployments)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=false
# NEXT_PUBLIC_ENABLE_AI_MATCHING=false
# NEXT_PUBLIC_ENABLE_VIDEO_CALLS=false
