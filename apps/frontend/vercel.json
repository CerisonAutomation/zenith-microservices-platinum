{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "zenith-dating-platform",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "regions": ["iad1", "sfo1", "fra1", "hnd1", "syd1"],
  "public": false,
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase-url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "VERCEL_AI_GATEWAY_ENABLED": "true"
  },
  "build": {
    "env": {
      "SUPABASE_SERVICE_ROLE_KEY": "@supabase-service-role-key",
      "OPENAI_API_KEY": "@openai-api-key",
      "ANTHROPIC_API_KEY": "@anthropic-api-key",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/api/ai/**": {
      "memory": 3008,
      "maxDuration": 60,
      "runtime": "edge"
    },
    "app/api/chat/**": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "edge"
    },
    "app/api/**": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/ai/cleanup",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/ai/analytics",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/ai/cost-report",
      "schedule": "0 9 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/ai/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(self), interest-cohort=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/docs",
      "destination": "/documentation",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/gateway/:path*",
      "destination": "https://ai-gateway.vercel.sh/v1/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  }
}
