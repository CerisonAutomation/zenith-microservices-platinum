# Test Environment Configuration
# Used for running test suite

# Environment
ENVIRONMENT=test
DEBUG=true

# Database (uses in-memory SQLite for tests)
DATABASE_URL=sqlite:///:memory:
SQLALCHEMY_DATABASE_URL=sqlite:///:memory:

# Supabase (mocked in tests)
SUPABASE_URL=https://test.supabase.co
SUPABASE_KEY=test_key
SUPABASE_SERVICE_ROLE_KEY=test_service_key

# Security
SECRET_KEY=test_secret_key_for_testing_only
PASSWORD_SALT=test_salt_for_hashing
JWT_SECRET=test_jwt_secret
JWT_ALGORITHM=HS256

# Stripe (mocked in tests)
STRIPE_SECRET_KEY=sk_test_mock_key_for_testing
STRIPE_WEBHOOK_SECRET=whsec_test_mock_secret
STRIPE_PUBLISHABLE_KEY=pk_test_mock_key

# Twilio (mocked in tests)
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=test_verify_sid

# Redis (mocked in tests)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Elasticsearch (mocked in tests)
ELASTICSEARCH_HOSTS=http://localhost:9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=test_zenith

# Email (mocked in tests)
EMAIL_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASSWORD=test_password
EMAIL_FROM=noreply@zenith.test

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=false

# AWS (mocked in tests)
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
