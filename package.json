{
  "name": "zenith-microservices-platinum-monorepo",
  "version": "1.0.0-legendary",
  "private": true,
  "description": "Zenith Legendary + Infermax Apex Enterprise Dating Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install",
    "legendary:verify": "./scripts/run_legendary_framework.sh",
    "legendary:benchmarks": "python3 scripts/zenith_legendary_framework.py",
    "legendary:heal": "python3 scripts/zenith_legendary_framework.py",
    "deploy:staging": "argocd app sync zenith-staging",
    "deploy:production": "argocd app sync zenith-production",
    "k8s:logs": "kubectl logs -f -n zenith-production",
    "k8s:status": "kubectl get pods -n zenith-production",
    "monitoring:dashboard": "kubectl port-forward -n monitoring svc/grafana 3001:3000"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
